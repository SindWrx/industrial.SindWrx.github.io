.services-block
    max-width 768px
    margin auto
    padding 40px 0
    display flex
    flex-wrap wrap
    justify-content space-around
.services-block__heading
    font-size 2.5em
    text-align center
    color #f8bc27
    margin-bottom 30px
    text-transform uppercase
    width: 100%
.services-block__sub-heading
    font-size 1.25em
    text-align center
    margin-bottom 30px
    text-transform uppercase
    width: 100%
.services-block__service
    text-align center
    width: 30%
.services-block__icon
    margin-bottom 20px
.services-block__discription
    font-size 1em
.read-about-the-services
    background url('../images/read-about-the-services/bg.png') no-repeat #465490
    background-position center
    height 405px
.read-about-the-services__association
    max-width 768px
    margin auto
    padding 80px 10%
    height 250px
.read-about-the-services__heading
    font-size 3em
    color #fff
.read-about-the-services__sub-heading
    font-size 1.75em
    color #fff
    margin-bottom 40px
.read-about-the-services__button-more
    padding 15px 40px
    background #f8bc27
    text-decoration none
    color #fff
    border-radius 5px
    transition all .3s ease
    font-size 12px
    text-transform uppercase
.read-about-the-services__button-more:hover
    background #fff
    color #000