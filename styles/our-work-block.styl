.news
    max-width 768px
    margin auto
    overflow hidden
    display flex
    justify-content space-around
    padding 80px 5%
.news-events
    width 30%
.news-events__globus
    margin-bottom 25px
.news-events__heading
    font-size 24px
    line-height 32px
    margin-bottom 20px
.news-events__archive-link
    font-size 16px
    text-decoration none
    color #696969
.news-events__archive-link:hover
    text-decoration underline
.news-latest
    width 30%
    position relative
    height 100%
.news-figure
    height 167px
    background url('../images/news/hexagon-news.png') no-repeat
    background-position left center
    text-align center
    line-height 30px
    margin-bottom 10px
.news-figure__day
    font-size 48px
    padding-top 58px
    width 145px
.news-figure__mounth
    font-size 16px
    color #868686
    width 145px
.news-latest__heading
    font-size 14px
    display inline
.news-latest__discription
    font-size 14px
    font-family Arial
    color #868686
    margin-top 15px
    overflow hidden
    margin-bottom 60px
.news-latest__button-more
    color black
    font-size 12px
    text-decoration none
    padding 10px 16px
    border 1px solid #ccc
    position absolute
    bottom 0%
.news-latest__button-more:hover
    text-decoration underline
.our-work
    background url('../images/our-work/bg-min.jpg') no-repeat
    background-size 100% 100%
    background-position 0% 40%
    padding 70px 0 80px 0
    color #fff
    height 300px
    text-transform uppercase
    text-align center
.our-work__heading
    font-size 2.5em
    margin-bottom 10px
.our-work__sub-heading
    font-size 1.5em
    margin-bottom 50px
.our-work__button-more
    color #fff
    font-size 12px
    text-decoration none
    padding 10px 15px
    border 1px solid #fff
    transition all .3s ease
.our-work__button-more:hover
    background #f8bc27
